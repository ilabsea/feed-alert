<div class="panel panel-info">
  <table class='table table-responsive'>
    <thead>
      <tr>
        <td>Full Name</td>
        <td>Email</td>
        <td align="center">Email Alert</td>
        <td>Phone</td>
        <td align="center">SMS Alert</td>
        <% if group_with_role.has_admin_role? %>
          <td class='td-last'> Action </td>
        <% end %>
      </tr>
    </thead>

    <% if group_with_role.object.memberships.size > 0 %>

    <tbody>
      <% group_with_role.object.memberships.each do |membership| %>
        <tr id='membership-<%=membership.id%>'>
          <td><%= membership.member.full_name %></td>
          <td><%= membership.member.email %></td>
          <td align="center">
            <% if membership.member.email_alert %>
              <i class='glyphicon glyphicon-envelope'> </i>
            <% end %>
          </td>          
          <td><%= membership.member.phone %></td>
          <td align="center">
            <% if membership.member.sms_alert %>
              <i class='glyphicon glyphicon-phone'> </i>
            <% end %>
          </td>          
          <% if group_with_role.has_admin_role? %>
            <td><%= link_destroy ' ', membership_path(membership.id), class: 'remove-member', data: {id: membership.id} %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
    <% end %>
  </table>
</div>

