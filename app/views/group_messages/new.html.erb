<% content_for(:title) { "Send Group Message"} %>
<% breadcrumb_buffer([{ "Send Group Message": nil}]) %>

<%= panel "Send Group Message" do %>
  <%=simple_form_for(@group_message, html: { class: 'form-inline form'}) do |f| %>

    <div class="form-group horizontal-group">
      <label class="required" style="vertical-align: top"><abbr>*</abbr> To Groups </label>
      <div class="checkbox-list">
        <%= f.collection_check_boxes :receiver_groups, current_user.groups, :id, :name, include_hidden: false do |group| %>
          <%= group.label do  %>
            <%= group.check_box({checked: false}) %>
            <%= group.text %>
          <% end -%>
        <% end -%>
      </div>
    </div>

    <div class="form-group horizontal-group">
      <label style="vertical-align: top">Message By</label>
      <div class="checkbox-list">
        <span style="height: 30px;"><%= f.check_box :email_alert %> Email</span>
        <span style="height: 30px;"><%= f.check_box :sms_alert %> SMS</span>
      </div>
    </div>

    <div class='form-group'>
      <label class="control-label required" style="vertical-align: top">Type a message here</label>
      <%= f.text_area :message, as: :text, class: 'form-control', rows: 6, cols: 40, maxlength: 140 %>
    </div>

    <div class="form-group">
      <label></label>
      <div class="form-control bar">
        <div id="counter-bar"></div>
      </div>
      <span id="counter">140 chars left</span>
    </div>

    <div class='form-group form-action-group'>
      <label></label>
      <%=f.submit 'Send', label: false, class: 'btn btn-primary btn-app' %>
    </div>

  <% end %>  
<% end %>  
