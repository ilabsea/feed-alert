<% content_for(:title) { "Change Password"} %>
<% breadcrumb_buffer([{ "Change Password": nil}]) %>

<%= panel "Change Password" do %>
  <%= simple_form_for @user, { url: update_password_users_path, method: :put, html: { class: 'form-inline form', autocomplete: :off } } do |f| %>
    <%= password_field_tag :skip, '', class: 'hidden' %>
    <%=f.input :old_password, required: true, label: 'Old Password', 
               input_html: {class: 'form-control', autocomplete: :off } %>

    <%=f.input :password, label: "New password", required: true,
               input_html: {class: 'form-control', autocomplete: :off } %>

    <%=f.input :password_confirmation, label: "Confirm new password", required: true,
               input_html: {class: 'form-control', autocomplete: :off } %>


    <div class='form-group form-action-group'>
      <label class='control-label'></label>
      <%=f.submit 'Change Password', class: 'btn btn-primary btn-app' %>
    </div>

  <% end %>
<% end %>